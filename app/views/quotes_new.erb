

<form class="form-horizontal" role="form"
  method="post" action="/categories/<%=@category_id%>/subcategories/<%=@subcategory_id%>/quotes/new"
  enctype="multipart/form-data"
  >
  <div class="form-group">
    <label class="control-label col-sm-2" for="email">Quote:</label>
    <div class="col-sm-10">
      <textarea class="form-control" id="quote"  name="quote[text]" placeholder="Enter quote"></textarea>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Image (Optional):</label>
    <div class="col-sm-10">
      <input type="file" class="form-control" id="image" name="quote[image]" placeholder="Choose file">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Submit</button>
    </div>
  </div>
</form>


